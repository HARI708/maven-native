<component-set>
  <components>
    
    <!--
     |  Generic MSVC compiler and linker, user must call MSVC setup up script 
     -->
    <component>
      <role>org.codehaus.mojo.natives.compiler.Compiler</role>
      <role-hint>msvc</role-hint>
      <implementation>org.codehaus.mojo.natives.msvc.MSVCCompiler</implementation>
      <instantiation-strategy>per-lookup</instantiation-strategy>
    </component>

    <component>
      <role>org.codehaus.mojo.natives.linker.Linker</role>
      <role-hint>msvc</role-hint>
      <implementation>org.codehaus.mojo.natives.msvc.MSVCLinker</implementation>
      <instantiation-strategy>per-lookup</instantiation-strategy>
    </component>
    
    <!--
     |  MSVC6 compiler, additional envs are added accourding MSVC6 env script
     -->
    
    <component>
      <role>org.codehaus.mojo.natives.compiler.Compiler</role>
      <role-hint>msvc6</role-hint>
      <implementation>org.codehaus.mojo.natives.msvc.MSVC6Compiler</implementation>
      <instantiation-strategy>per-lookup</instantiation-strategy>
    </component>

    <component>
      <role>org.codehaus.mojo.natives.linker.Linker</role>
      <role-hint>msvc6</role-hint>
      <implementation>org.codehaus.mojo.natives.msvc.MSVC6Linker</implementation>
      <instantiation-strategy>per-lookup</instantiation-strategy>
    </component>

    <!--
     |  MSVC .NET 2003 compiler, additional envs are added accourding MSVC2003 env script
     -->
    
    <component>
      <role>org.codehaus.mojo.natives.compiler.Compiler</role>
      <role-hint>msvc2003</role-hint>
      <implementation>org.codehaus.mojo.natives.msvc.MSVC2003Compiler</implementation>
      <instantiation-strategy>per-lookup</instantiation-strategy>
    </component>

    <component>
      <role>org.codehaus.mojo.natives.linker.Linker</role>
      <role-hint>msvc2003</role-hint>
      <implementation>org.codehaus.mojo.natives.msvc.MSVC2003Linker</implementation>
      <instantiation-strategy>per-lookup</instantiation-strategy>
    </component>

  </components>
</component-set>
